{
  "extends": [
      "tslint:all"
  ],
  "defaultSeverity": "error",
  "rules": {
      "completed-docs": false,
      "prefer-for-of": false,
      "strict-type-predicates": false,
      "only-arrow-functions": [
          true,
          "allow-named-functions"
      ],
      "no-inferrable-types": [
          false,
          "ignore-params",
          "ignore-properties"
      ],
      "max-line-length": [
          false,
          170
      ],
      "align": [
          false
      ],
      "no-unnecessary-type-assertion": false,
      "prefer-switch": false
  }
}